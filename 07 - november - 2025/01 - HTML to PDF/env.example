# ============================================================================
# .env - Archivo de Configuración del Proyecto
# ============================================================================
# Configurar estos valores según tus necesidades
# Este archivo es opcional - el script tiene valores por defecto

# ============================================================================
# CONFIGURACIÓN DEL PDF
# ============================================================================

# Formato de página (A4, Letter, etc.)
PDF_FORMAT=A4

# Tamaño personalizado (opcional, comentar si usas PDF_FORMAT)
# PDF_WIDTH_MM=210
# PDF_HEIGHT_MM=297

# ============================================================================
# MÁRGENES (en milímetros)
# ============================================================================
MARGIN_TOP=15
MARGIN_BOTTOM=15
MARGIN_LEFT=15
MARGIN_RIGHT=15

# Para documentos con muchas imágenes (reducir márgenes)
# MARGIN_TOP=10
# MARGIN_BOTTOM=10
# MARGIN_LEFT=10
# MARGIN_RIGHT=10

# ============================================================================
# CONFIGURACIÓN DE ESTILOS
# ============================================================================

# Inyectar automáticamente CSS para control de saltos de página
INJECT_PAGE_BREAK_CSS=true

# Permitir sugerencias de presentación (CSS hinting)
PRESENTATIONAL_HINTS=true

# Zoom del PDF (1.0 = 100%)
PDF_ZOOM=1.0

# ============================================================================
# LOGGING Y DIAGNOSTICO
# ============================================================================

# Archivo de registro
LOG_FILE=conversion.log

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Guardar HTML temporal para debugging (true/false)
SAVE_TEMP_HTML=true

# ============================================================================
# FUENTES
# ============================================================================

# Usar fuentes personalizadas (ruta a carpeta con archivos .ttf)
# FONTS_DIRECTORY=/path/to/fonts

# Codificación de caracteres
CHARSET=utf-8

# ============================================================================
# OPTIMIZACIÓN DE TABLAS
# ============================================================================

# Altura estimada de fila en tabla (mm)
ROW_HEIGHT_MM=8

# Altura del encabezado de tabla (mm)
HEADER_HEIGHT_MM=10

# Aplicar estilos de impresión (@media print)
APPLY_PRINT_STYLES=true

# ============================================================================
# RUTAS DEL PROYECTO
# ============================================================================

# Directorio de entrada (archivos HTML)
INPUT_DIR=data

# Directorio de salida (archivos PDF)
OUTPUT_DIR=output

# Directorio de logs
LOG_DIR=logs

# ============================================================================
# PROCESAMIENTO AVANZADO (Opcional)
# ============================================================================

# Convertir colores a escala de grises para impresoras B&W
# GRAYSCALE=false

# Comprimir PDF (puede reducir calidad de imágenes)
# COMPRESS=false

# Incluir metadatos en PDF
INCLUDE_METADATA=true

# Autor del PDF
PDF_AUTHOR=Mi Proyecto HTML to PDF

# Asunto del PDF
PDF_SUBJECT=Conversión Automática

# Palabras clave del PDF
PDF_KEYWORDS=pdf,html,conversion,weasyprint

# ============================================================================
# NOTAS DE USO
# ============================================================================

# Para usar este archivo en el script Python, descomenta la siguiente línea
# al inicio del script:
# from dotenv import load_dotenv
# import os
# load_dotenv()
# 
# Luego accede a las variables con:
# margin_top = int(os.getenv('MARGIN_TOP', 15))
# pdf_format = os.getenv('PDF_FORMAT', 'A4')

# ============================================================================
# PERFILES PREDEFINIDOS
# ============================================================================

# Para documentos técnicos (memorias de cálculo, reportes)
# MARGIN_TOP=15
# MARGIN_BOTTOM=15
# ROW_HEIGHT_MM=8
# APPLY_PRINT_STYLES=true

# Para presentaciones
# MARGIN_TOP=20
# MARGIN_BOTTOM=20
# ROW_HEIGHT_MM=10
# PDF_ZOOM=1.2

# Para impresión de alta calidad
# COMPRESS=false
# PRESENTATIONAL_HINTS=true
# PDF_ZOOM=1.0

# Para archivos digitales (pantalla)
# COMPRESS=true
# MARGIN_TOP=10
# APPLY_PRINT_STYLES=false
